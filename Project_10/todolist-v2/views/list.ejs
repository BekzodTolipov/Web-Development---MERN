
    <%- include('header') -%>

    <div class="box" id="heading">
        <h1><%= listTitle %> List</h1>
    </div>

    <div class="box" id="">
        <% newTodoItem.forEach(item => { %>
            <form action="/delete/<%= listTitle %>" method="post">
                <div class="item">
                    <input value="<%= item._id %>" type="checkbox" name="checkbox" onchange="this.form.submit();">
                    <p><%= item.name %></p>
                </div>
            </form>
        <% }) %>

        <form class="item" action="/" method="post">
            <input placeholder="New Item" type="text" name="new_todo_item">
            <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>

    </div>

    <%- include('footer') -%>
