<%- include('partials/header.ejs') %> 
<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="newPostTitle">Title</label>
        <input class="form-control" name="newPostTitle" id="newPostTitle" type="text" placeholder="New Post Title"/>
    </div>
    <div class="form-group">
        <label for="newPostContent">Post</label>
        <textarea class="form-control" name="newPostContent" id="newPostContent" type="text" placeholder="New Post Content" rows="10" cols="50"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Publish</button>
</form>

    
